<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="100dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/st_img"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="ID : "
        android:id="@+id/st_ID"
        android:gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/st_proname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pro name : " />

            <TextView
                android:id="@+id/st_proprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Price : " />

            <TextView
                android:id="@+id/st_proquant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Available Quantity : " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/st_editquan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="Enter your Quantity" />

                <Button
                    android:id="@+id/st_buttonsubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="submit" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>